<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>工具包</name>
  <version>1.22</version>
  <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description><![CDATA[
  开发中常用到的工具，比如进制转换，简繁体转换，调色板，json格式化等
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="libowu.utils.Findview" class="libowu.utils.Findview" text="工具包" description="工具包">
      <add-to-group group-id="ToolsMenu" anchor="after" relative-to-action="AndroidToolsGroup"/>
        <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl COMMA"/>
    </action>
    <action id="libowu.language" class="libowu.utils.Language" text="简繁体转换" description="简繁体转换">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt CLOSE_BRACKET"/>
    </action>
    <action id="libowu.getAndpost" class="libowu.utils.PostAndGet" text="在线请求" description="在线请求">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt OPEN_BRACKET"/>
    </action>
  </actions>

</idea-plugin>